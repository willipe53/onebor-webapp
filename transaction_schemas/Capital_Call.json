{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Capital Call",
  "description": "Capital payable to a private equity fund",
  "type": "object",
  "properties": {
    "amount": {
      "type": "string"
    },
    "currency_code": {
      "type": "string",
      "enum": [
        "currencies"
      ]
    },
    "post_date": {
      "type": "string",
      "format": "date"
    },
    "expected_date": {
      "type": "string",
      "format": "date"
    }
  },
  "required": [
    "amount",
    "currency_code"
  ],
  "additionalProperties": false,
  "valid_instruments": [
    "PEF"
  ],
  "valid_contra_groups": [
    "IA",
    "EA",
    "P"
  ]
}